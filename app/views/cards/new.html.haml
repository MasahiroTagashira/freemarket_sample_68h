.account_body
  = render "shared/header";
  .credit_main
    .credit_main_top
      %h1 支払い方法
    .credit_main_content
      .credit_main_content_formbox
        = form_tag(pay_cards_path, method: :post, id: 'charge-form', name: "inputForm") do
          .credit_main_content_formbox_textbox
            %label.credit_main_content_formbox_textbox_text
              カード番号
            %span.credit_main_content_formbox_textbox_text2
              必須
          = text_field_tag "number", "", class: 'card-number--input', type: "text", id: 'card_number', maxlength: "16", placeholder: "半角数字のみ"
          .registration-error{type: "hidden", value: "必須項目です"}
          %ul.credit_main_content_formbox_imagelists
            %li
              %img{src: "/images/credit-card_22.png", height:"20px"}
            %li
              %img{src: "/images/credit-card_9.png", height:"20px"}
            %li
              %img{src: "/images/credit-card_26.png", height:"20px"}
            %li
              %img{src: "/images/credit-card_28.png", height:"20px"}
            %li
              %img{src: "/images/credit-card_19.png", height:"20px"}
            %li
              %img{src: "/images/credit-card_31.png", height:"20px"}
            %li
              %img{src: "/images/credit-card_15.png", height:"20px"}

        .credit_main_content_formbox2
          .credit_main_content_formbox2_textbox2
            %label.credit_main_content_formbox2_textbox2_text
              = "有効期限"
            %span.credit_main_content_formbox2_textbox2_text2
              = "必須"
          .credit_main_content_formbox2_formblock
            .credit_main_content_formbox2_formblock_selectbox1
              %select#exp_month{name: "exp_month", type: "text"}
                %option{:value => ""} --
                %option{:value => "0"}01
                %option{:value => "1"}02
                %option{:value => "2"}03
                %option{:value => "3"}04
                %option{:value => "4"}05
                %option{:value => "5"}06
                %option{:value => "6"}07
                %option{:value => "7"}08
                %option{:value => "8"}09
                %option{:value => "9"}10
                %option{:value => "10"}11
                %option{:value => "11"}12
              %span
                = "月"
            .credit_main_content_formbox2_formblock_selectbox2
              %select#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span
                = "年"
        .credit_main_content_formbox3
          .credit_main_content_formbox3_textbox3
            %label.credit_main_content_formbox3_textbox3_text
              = "セキュリティコード"
            %span.credit_main_content_formbox3_textbox3_text2
              = "必須"
            = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面4桁もしくは3桁の番号", maxlength: "4", id: "cvc"
            .credit_main_content_formbox3_tips
              %span.credit_main_content_formbox3_tips_question
                = "?"
              %a.credit_main_content_formbox3_tips_text
                = "カード裏面の番号とは？"
            #card_token
            = submit_tag "追加する", id: "token_submit"


  = render "shared/footer";